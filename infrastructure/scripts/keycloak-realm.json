{
  "realm": "monarch",
  "enabled": true,
  "displayName": "Monarch Platform",
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "accessTokenLifespan": 900,
  "ssoSessionIdleTimeout": 1800,
  "roles": {
    "realm": [
      { "name": "platform_admin", "description": "Platform-level admin" },
      { "name": "tenant_admin", "description": "Tenant-level admin" },
      { "name": "rm", "description": "Relationship Manager" },
      { "name": "ops", "description": "Operations user" },
      { "name": "compliance", "description": "Compliance officer" },
      { "name": "client_diy", "description": "Self-service client" },
      { "name": "client_assisted", "description": "RM-assisted client" }
    ]
  },
  "clients": [
    {
      "clientId": "monarch-web",
      "enabled": true,
      "publicClient": true,
      "redirectUris": ["http://localhost:3000/*"],
      "webOrigins": ["http://localhost:3000"],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false
    },
    {
      "clientId": "monarch-mobile",
      "enabled": true,
      "publicClient": true,
      "redirectUris": ["monarch://callback"],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false
    },
    {
      "clientId": "monarch-gateway",
      "enabled": true,
      "publicClient": false,
      "secret": "dev-gateway-secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": true
    }
  ],
  "clientScopes": [
    {
      "name": "tenant",
      "protocol": "openid-connect",
      "attributes": { "include.in.token.scope": "true" },
      "protocolMappers": [
        {
          "name": "tenant_id",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "tenant_id",
            "claim.name": "tenant_id",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "admin@monarch.dev",
      "email": "admin@monarch.dev",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Platform",
      "lastName": "Admin",
      "credentials": [{ "type": "password", "value": "admin_dev", "temporary": false }],
      "realmRoles": ["platform_admin"],
      "attributes": { "tenant_id": ["monarch_default"] }
    }
  ]
}
